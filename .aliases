#!/usr/bin/env sh

# Determine the editor to use
vim_or_nvim="vim"
if type "nvim" > /dev/null; then
    echo 'enek neovim'
    vim_or_nvim="nvim"
fi

alias help="man"

alias ..="cd .."
alias cd..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias ls-dir="ls -d */"
alias proses="ps aux | grep"

# vim
alias vim=$vim_or_nvim
alias vi=$vim_or_nvim
alias v=$vim_or_nvim
alias vconf="cd ~/.dotfiles && vim ~/.dotfiles/.vimrc"
alias hosts="sudo vim -u NONE /etc/hosts"

# zsh
alias zconf="vim ~/.zshrc"
alias zsource="source ~/.zshrc"
alias lsln="find . -maxdepth 1 -type l" # list symlinks

# tmux
alias tmuxmain="tmux switch -t MAIN" # go to main session

# git
alias gst="git status"
alias gdiff="git diff"
alias gcf="vim $HOME/.gitconfig"
